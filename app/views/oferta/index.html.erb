<p id="notice"><%= notice %></p>

<% if current_user %>

<div class="contenedor-tabla">
<div class="table-responsive">
<h1>Sus Ofertas</h1>

<table class="table table-condensed">
  <thead>
    <tr class="info">
      <th>Titulo</th>
      <th>Descripcion</th>
      <th>Precio</th>
      <th>Forma de pago</th>
      
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @oferta.each do |ofertum| %>
      <tr class="active">
        <td><%= ofertum.titulo %></td>
        <td><%= ofertum.descripcion %></td>
        <td><%= ofertum.precio %></td>
        <td><%= ofertum.forma_pago %></td>
        
        <td><%= link_to 'Mostrar', ofertum, class: "btn btn-primary" %></td>
        <td><%= link_to 'Editar', edit_ofertum_path(ofertum), class: "btn btn-warning" %></td>
        <td><%= link_to 'Borrar', ofertum, class: "btn btn-danger", method: :delete, data: { confirm: 'Estas seguro de Eliminar?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

  
  
  

  <% if @cant <2 %> 

    <%= link_to 'Nueva Oferta', new_ofertum_path, class: "btn btn-success" %>
  
  <%else%>
    
    <% if current_user.rol == 3 && @cant <3 %>

    <%= link_to 'Nueva Oferta', new_ofertum_path, class: "btn btn-success" %>
  
  <%else%>
    <h3>Ya alcanzaste el máximo de ofertas permitidas</h3>

  <%end %>


  <%end %>



<% else %>
        <p>Debes iniciar sesión <%=link_to 'Login', usuario_sessions_new_path %></p>
<% end %> 
</div>
</div>