<p id="notice"><%= notice %></p>

<% if current_user.rol == 1 %>

<div class="contenedor-tabla">
<div class="table-responsive">
<h1>Listing Categoria</h1>

<table class="table table-condensed">
  <thead>
    <tr class="info">
      <th>Categoria</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categoria.each do |categorium| %>
      <tr class="active">
        <td><%= categorium.categoria %></td>
        <td><%= link_to 'Mostrar', categorium, class: "btn btn-primary" %></td>
        <td><%= link_to 'Editar', edit_categorium_path(categorium), class: "btn btn-warning" %></td>
        <td><%= link_to 'Borrar', categorium, class: "btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nueva Categoria', new_categorium_path, class: "btn btn-success" %>

<% else %>
        <p>Debes iniciar sesi√≥n <%=link_to 'Login', usuario_sessions_new_path %></p>
<% end %> 